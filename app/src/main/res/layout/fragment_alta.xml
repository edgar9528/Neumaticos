<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tdt.neumaticos.Fragments.AltaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/paddingGeneral"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_alta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Texto ejemplo"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingBottom="@dimen/paddingControles"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marca:"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingBottom="2dp"
                    />

                <Spinner
                    android:id="@+id/spinner_marca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/paddingControles"
                    >
                </Spinner>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/paddingControles"
                    android:theme="@style/EditTextBlue"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ti_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descripción"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        />
                </android.support.design.widget.TextInputLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingBottom="@dimen/paddingControles"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/EditTextBlue"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ti_fechaFab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha fabricación"
                            android:focusable="false"
                            android:inputType="date"
                            android:clickable="true"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/EditTextBlue"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ti_fechaCom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha compra"
                            android:focusable="false"
                            android:inputType="date"
                            android:clickable="true"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingBottom="@dimen/paddingControles"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/EditTextBlue"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ti_kilometraje"
                            android:layout_width="204dp"
                            android:layout_height="wrap_content"
                            android:hint="Kilometraje"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789."
                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/EditTextBlue"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ti_presion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Presión"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789."
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/paddingControles"
                    android:theme="@style/EditTextBlue"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ti_medida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medida"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/paddingControles"
                    android:theme="@style/EditTextBlue"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ti_nserie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No. Serie"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/paddingControles"
                    android:theme="@style/EditTextBlue"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ti_dibujo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mm del dibujo"
                        android:singleLine="true"
                        android:inputType="number"
                        android:digits="0123456789."
                        />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingBottom="2dp"
                    />

                <Spinner
                    android:id="@+id/spinner_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/paddingControles"
                    >
                </Spinner>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingBottom="@dimen/paddingControles"
                    android:paddingTop="@dimen/paddingControles"
                    >

                    <Button
                        android:id="@+id/button_cancelar1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancelar"
                        android:theme="@style/RaisedButtonDark"
                        />

                    <Button
                        android:id="@+id/button_terminar1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Terminar"
                        android:theme="@style/RaisedButtonDark"
                        />

                </LinearLayout>


            </LinearLayout>



        </ScrollView>

    </LinearLayout>

</FrameLayout>

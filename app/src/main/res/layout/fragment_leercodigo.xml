<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tdt.neumaticos.Fragments.LeercodigoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/paddingGeneral"
        >

        <TextView
            android:paddingTop="20dp"
            android:id="@+id/tv_infoLector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lector no conectado"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="25sp"
            />

        <TextView
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escanea el tag para"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/tv_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="25sp"
            />

        <TextView
            android:paddingTop="40dp"
            android:id="@+id/tv_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esperando lectura..."
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="30sp"
            android:paddingBottom="40dp"
            />

        <Button
            android:id="@+id/button_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conectar lector"
            android:theme="@style/RaisedButtonDark"
            />


    </LinearLayout>



</FrameLayout>

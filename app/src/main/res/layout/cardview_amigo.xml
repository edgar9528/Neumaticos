<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/amigoCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview2"
    android:layout_marginBottom="@dimen/vertical_margin"
    cardview:cardCornerRadius="@dimen/cornerRadius_carview"
    >

    <FrameLayout
        android:id="@+id/CardView_amigo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ed6a40">


        <LinearLayout
            android:id="@+id/LayoutCardAmigo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/CorreoCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="prueba"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/Title_cardview"
                    />

                <TextView
                    android:id="@+id/NombreCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="prueba"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/Text_cardview"
                    />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</android.support.v7.widget.CardView>